{
  "name": "@agor/daemon",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently -n core,daemon -c cyan,green \"pnpm --filter @agor/core dev\" \"tsx watch --clear-screen=false src/index.ts ../../packages/core/dist\"",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@agor/core": "workspace:*",
    "@feathersjs/authentication": "^5.0.35",
    "@feathersjs/authentication-local": "^5.0.35",
    "@feathersjs/express": "^5.0.29",
    "@feathersjs/feathers": "^5.0.29",
    "@feathersjs/socketio": "^5.0.29",
    "@types/cors": "^2.8.19",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "concurrently": "^9.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}
