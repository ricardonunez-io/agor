{
  "name": "Agor Playground (Recommended - Fast npm install)",
  // Cache bust: 2025-11-20-v21 - Bump to agor-live v0.8.6
  "build": {
    "dockerfile": "playground/Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": false,
      "dockerDashComposeVersion": "v2"
    }
  },
  "containerEnv": {
    "VITE_CODESPACES": "true",
    "CORS_ORIGIN": "*"
  },
  "forwardPorts": [3030],
  "portsAttributes": {
    "3030": {
      "label": "Agor",
      "onAutoForward": "notify",
      "visibility": "public"
    }
  },
  "postStartCommand": "bash .devcontainer/playground/start-services.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "alexcvzz.vscode-sqlite"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "remoteUser": "agor"
}
