{
  "name": "@agor/core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "import": "./dist/db/index.js",
      "require": "./dist/db/index.cjs"
    },
    "./git": {
      "types": "./dist/git/index.d.ts",
      "import": "./dist/git/index.js",
      "require": "./dist/git/index.cjs"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.js",
      "require": "./dist/api/index.cjs"
    },
    "./claude": {
      "types": "./dist/claude/index.d.ts",
      "import": "./dist/claude/index.js",
      "require": "./dist/claude/index.cjs"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js",
      "require": "./dist/config/index.cjs"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "import": "./dist/tools/index.js",
      "require": "./dist/tools/index.cjs"
    },
    "./tools/models": {
      "types": "./dist/tools/claude/models.d.ts",
      "import": "./dist/tools/claude/models.js",
      "require": "./dist/tools/claude/models.cjs"
    },
    "./permissions": {
      "types": "./dist/permissions/index.d.ts",
      "import": "./dist/permissions/index.js",
      "require": "./dist/permissions/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:setup": "tsx src/db/scripts/setup-db.ts",
    "db:test": "tsx src/db/scripts/test-integration.ts",
    "db:migrate:mcp": "tsx src/db/scripts/migrate-add-mcp-tables.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.8",
    "@feathersjs/authentication-client": "^5.0.35",
    "@feathersjs/feathers": "^5.0.29",
    "@feathersjs/socketio-client": "^5.0.29",
    "@google/gemini-cli-core": "^0.9.0",
    "@google/genai": "^1.25.0",
    "@libsql/client": "^0.14.0",
    "@openai/codex-sdk": "^0.46.0",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.44.6",
    "js-yaml": "^4.1.0",
    "simple-git": "^3.28.0",
    "socket.io-client": "^4.8.1",
    "uuidv7": "^1.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.30.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}
